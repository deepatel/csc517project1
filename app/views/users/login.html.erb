<% if flash[:error] %>
<p class="error"><%= flash[:error] %></p>
<% end %>

<%= form_tag "/login" do %>
<table>
  <tr>
    <th><%= label_tag :username, "Username:" %></th>
    <td><%= text_field_tag :username %></td>
  </tr>
  <tr>
    <th><%= label_tag :rpassword, "Password:" %></th>
    <td><%= password_field_tag :rpassword %></td>
  </tr>
  <tr>
    <td align="center" colspan="2"><%= submit_tag "Login" %></td>
  </tr>
</table>
<% end %>

<script type="text/javascript">
  document.getElementById("username").focus();
</script>
